<% if ssl == "yes" -%>
# TLS

# TLSCipherSuite HIGH # debian package is compiled with gnutls, 
                      # it's not the same ciphers than openssl
TLSCACertificateFile  <%= scope.lookupvar('openssl::params::default_ssl_cacert') %>
TLSCertificateFile    <%= scope.lookupvar('openldap::params::cert_directory') %>/<%= fqdn %>_cert.pem
TLSCertificateKeyFile <%= scope.lookupvar('openldap::params::cert_directory') %>/<%= fqdn %>_key.pem
<% end -%>
